    </Style>
    <Style x:Key="RedoImageStyle" TargetType="Image">
        <Setter Property="Source" Value="../Resources/redo.png" />
    </Style>
    <Style x:Key="PasteImageStyle" TargetType="Image">
        <Setter Property="Source" Value="../Resources/paste.png" />
    </Style>
    
