<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="NewImageStyle" TargetType="Image">
        <Setter Property="Source" Value="new.png" />
    </Style>
    <Style x:Key="OpenImageStyle" TargetType="Image">
        <Setter Property="Source" Value="open.png" />
    </Style>
    <Style x:Key="SaveImageStyle" TargetType="Image">
        <Setter Property="Source" Value="save.png" />
    </Style>
    <Style x:Key="PrintImageStyle" TargetType="Image">
        <Setter Property="Source" Value="print.png" />
    </Style>
    <Style x:Key="UndoImageStyle" TargetType="Image">
        <Setter Property="Source" Value="undo.png" />
    </Style>
    <Style x:Key="RedoImageStyle" TargetType="Image">
        <Setter Property="Source" Value="redo.png" />
    </Style>
    <Style x:Key="PasteImageStyle" TargetType="Image">
        <Setter Property="Source" Value="paste.png" />
    </Style>
</ResourceDictionary>